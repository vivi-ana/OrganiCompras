<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".SplashScreen">

    <ImageView
        android:id="@+id/iconImage"
        android:layout_width="295dp"
        android:layout_height="289dp"
        android:contentDescription="@string/iconDesc"
        android:src="@drawable/ic_icon_splash"
        app:layout_constraintBottom_toTopOf="@+id/iconoNombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iconoNombre"
        android:layout_width="0dp"
        android:layout_height="136dp"
        android:contentDescription="@string/iconDesc"
        android:src="@drawable/icono_nombre"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iconImage"
        tools:src="@drawable/icono_nombre" />


</androidx.constraintlayout.widget.ConstraintLayout>